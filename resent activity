import React from "react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Calendar, Clock } from "lucide-react";
import { format, differenceInDays } from "date-fns";

export default function RecentActivity({ rentals }) {
    const getStatusColor = (rental) => {
        if (rental.status === 'returned') return 'bg-green-100 text-green-800';
        if (rental.status === 'overdue') return 'bg-red-100 text-red-800';
        
        const dueDate = new Date(rental.due_date);
        const today = new Date();
        const daysLeft = differenceInDays(dueDate, today);
        
        if (daysLeft < 0) return 'bg-red-100 text-red-800';
        if (daysLeft <= 3) return 'bg-amber-100 text-amber-800';
        return 'bg-blue-100 text-blue-800';
    };

    const getStatusText = (rental) => {
        if (rental.status === 'returned') return 'Returned';
        if (rental.status === 'overdue') return 'Overdue';
        
        const dueDate = new Date(rental.due_date);
        const today = new Date();
        const daysLeft = differenceInDays(dueDate, today);
        
        if (daysLeft < 0) return 'Overdue';
        if (daysLeft === 0) return 'Due Today';
        if (daysLeft <= 3) return `Due in ${daysLeft} day${daysLeft > 1 ? 's' : ''}`;
        return 'Active';
    };

    return (
        <Card>
            <CardHeader>
                <CardTitle className="flex items-center gap-2 text-xl font-bold text-slate-800">
                    <Clock className="w-5 h-5" />
                    My Recent Activity
                </CardTitle>
            </CardHeader>
            <CardContent>
                {rentals.length > 0 ? (
                    <div className="space-y-4">
                        {rentals.map((rental) => (
                            <div key={rental.id} className="flex items-center justify-between p-4 border border-slate-200 rounded-lg">
                                <div className="flex-1">
                                    <h4 className="font-semibold text-slate-800">{rental.book_title}</h4>
                                    <p className="text-sm text-slate-600">by {rental.book_author}</p>
                                    <div className="flex items-center gap-4 mt-2 text-xs text-slate-500">
                                        <span className="flex items-center gap-1">
                                            <Calendar className="w-3 h-3" />
                                            Rented {format(new Date(rental.rental_date), 'MMM d, yyyy')}
                                        </span>
                                        <span>Due {format(new Date(rental.due_date), 'MMM d, yyyy')}</span>
                                    </div>
                                </div>
                                <Badge className={getStatusColor(rental)}>
                                    {getStatusText(rental)}
                                </Badge>
                            </div>
                        ))}
                    </div>
                ) : (
                    <div className="text-center py-8 text-slate-500">
                        <Clock className="w-12 h-12 mx-auto mb-4 opacity-50" />
                        <p>No recent activity</p>
                        <p className="text-sm mt-1">Start browsing books to see your rental history here</p>
                    </div>
                )}
            </CardContent>
        </Card>
    );
}
